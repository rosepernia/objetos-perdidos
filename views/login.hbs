<main>
<div class="container">
                <div class="row">
                    <div class="booking-form">
                        <div class="form-header">
                            <h1>Iniciar sesión</h1>
                        </div>
                        <form method="post" action="/usuarios/iniciarsesion">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <span class="form-label">email</span>
                                        <input class="form-control" type="email" name="email" required autocomplete="off" value="{{body.email}}">
                                        <p class="errText"> {{mensaje.usuario}}</p>  
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <span class="form-label">Contraseña</span>
                                        <input class="form-control" type="password" name="password" required>
                                        <p class="errText"> {{mensaje.password}}</p>                                                  
                                        <a class="inputText" href="//localhost:3000/usuarios/nuevopassword">Recuperar contraseña</a>
                                    </div>
                                </div>
                            
                                  {{!--   <div class="form-btn"> --}}
                                     <div class="col-12 d-flex justify-content-center align-items-center">
                                        <button class="submit" id="boton">Acceder</button>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


